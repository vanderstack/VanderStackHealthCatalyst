{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "baseUrl": "src",
    "sourceRoot": "src",
    "skipLibCheck": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "types": [],
  },
  "exclude": [
    "bin",
    "node_modules",
    "test/unit/*.spec.ts",
    "test/unit/init.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}